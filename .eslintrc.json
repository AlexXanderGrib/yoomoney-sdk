{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "quotes": "off",
    "no-useless-constructor": "off",
    "comma-dangle": "off",
    "space-before-function-paren": "off",
    "semi": "off"
  }
}